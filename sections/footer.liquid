        </ul>
      </div>

      <!-- Lincido Section -->
      <div class="footer-block grid__item">
        <h2 class="footer-block__heading">Lincido</h2>
        <ul class="footer-block__details-content list-unstyled">
          <li><a href="/pages/about-us">About Us</a></li>
          <li><a href="/pages/privacy-policy">Privacy Policy</a></li>
        </ul>
      </div>

      <!-- Help and Support Section -->
      <div class="footer-block grid__item">
        <h2 class="footer-block__heading">Help and Support</h2>
        <ul class="footer-block__details-content list-unstyled">
          <li><a href="/pages/return-policy">Return Policy</a></li>
          <li><a href="/pages/help-center">Help Center</a></li>
          <li><a href="/pages/size-chart">Size Chart</a></li>
          <li><a href="/pages/shipping-and-delivery">Shipping And Delivery</a></li>
          <li><a href="/pages/cancellation-modification-policy">Cancellation & Modification Policy</a></li>
          <li><a href="/pages/refund-replacement-policy">Refund & Replacement Policy</a></li>
          <li><a href="/pages/disclaimer-fake-websites">Disclaimer Regarding Fake Websites</a></li>
        </ul>
      </div>

      <!-- Get in Touch Section -->
      <div class="footer-block grid__item">
        <h2 class="footer-block__heading">GET IN TOUCH</h2>
        <div class="footer-block__details-content">
          <p>Support Time: 9 AM to 5 PM, Mon-Sat</p>
          <a href="/pages/contact" class="button">Open A Support Ticket</a>
          <ul class="list-social list-unstyled">
            <li><a href="{{ settings.social_facebook_link }}" class="link list-social__link"><i class="icon icon-facebook"></i></a></li>
            <li><a href="{{ settings.social_instagram_link }}" class="link list-social__link"><i class="icon icon-instagram"></i></a></li>
            <li><a href="#" class="link list-social__link"><i class="icon icon-amazon"></i></a></li>
            <li><a href="{{ settings.social_twitter_link }}" class="link list-social__link"><i class="icon icon-twitter"></i></a></li>
            <li><a href="{{ settings.social_tiktok_link }}" class="link list-social__link"><i class="icon icon-tiktok"></i></a></li>
            <li><a href="{{ settings.social_pinterest_link }}" class="link list-social__link"><i class="icon icon-pinterest"></i></a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="footer__content-bottom">
    <div class="footer__content-bottom-wrapper page-width">
      <div class="footer__column footer__localization isolate"></div>
      <div class="footer__column footer__column--info">
        {% if section.settings.payment_enable %}
          <div class="footer__payment">
            <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
            <ul class="list list-payment" role="list">
              <li class="list-payment__item">{% render 'icon-dmca' %}</li>
              <li class="list-payment__item">{% render 'icon-amazon-pay' %}</li>
              <li class="list-payment__item">{% render 'icon-american-express' %}</li>
              <li class="list-payment__item">{% render 'icon-apple-pay' %}</li>
              <li class="list-payment__item">{% render 'icon-diners-club' %}</li>
              <li class="list-payment__item">{% render 'icon-discover' %}</li>
              <li class="list-payment__item">{% render 'icon-meta-pay' %}</li>
              <li class="list-payment__item">{% render 'icon-google-pay' %}</li>
              <li class="list-payment__item">{% render 'icon-mastercard' %}</li>
              <li class="list-payment__item">{% render 'icon-paypal' %}</li>
              <li class="list-payment__item">{% render 'icon-shopify-pay' %}</li>
              <li class="list-payment__item">{% render 'icon-venmo' %}</li>
              <li class="list-payment__item">{% render 'icon-visa' %}</li>
            </ul>
          </div>
        {% endif %}
      </div>
    </div>
    <div class="footer__content-bottom-wrapper page-width">
      <div class="footer__copyright caption">
        <small class="copyright__content">&copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: routes.root_url }}</small>
        <small class="copyright__content">{{ powered_by_link }}</small>
      </div>
    </div>
  </div>
</footer>

