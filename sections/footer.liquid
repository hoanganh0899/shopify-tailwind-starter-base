              <ul>
                <li><a href="/collections/all">All Products</a></li>
                <!-- Add more product categories as needed -->
              </ul>
            </details>
          </li>
          <li>
            <details>
              <summary>Occasion</summary>
              <ul>
                <li><a href="/pages/404">Birthday</a></li>
                <!-- Add more occasions as needed -->
              </ul>
            </details>
          </li>
          <li>
            <details>
              <summary>Recipient</summary>
              <ul>
                <li><a href="/pages/404">For Him</a></li>
                <li><a href="/pages/404">For Her</a></li>
                <!-- Add more recipients as needed -->
              </ul>
            </details>
          </li>
          <li>
