{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    color: #ffffff;
    padding: 40px 0;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  } 

  .footer__content-top {
    background-color: #0a2540;
    padding: 60px 50px;
  }

  .footer__blocks-wrapper {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }

  .footer-block {
    margin-bottom: 30px;
  }

  .footer-block__heading {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 20px;
    color: #ffffff; /* Explicitly set the header color to white */
  }

  /* Shop By section styles */
  .footer-block__details-content > li > details {
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    padding-bottom: 10px;
    margin-bottom: 10px;
  }

  .footer-block__details-content > li > details > summary {
    font-size: 16px;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #ffffff; /* Ensure summary text is white */
  }

  .footer-block__details-content > li > details > summary::after {
    content: "\25BC";
    font-size: 12px;
    transition: transform 0.3s ease;
  }

  .footer-block__details-content > li > details[open] > summary::after {
    transform: rotate(180deg);
  }

  .footer-block__details-content ul {
    list-style-type: none;
    padding-left: 15px;
    margin-top: 10px;
  }

  .footer-block__details-content ul li {
    margin-bottom: 5px;
  }

  /* Link styles */
  .footer a {
    color: #ffffff;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer a:hover {
    color: #ff6600;
  }

  /* Get in Touch section styles */
  .footer-block__details-content .button {
    background-color: #ff6600;
    color: #ffffff;
    padding: 10px 20px;
    border-radius: 5px;
    display: inline-block;
    margin-top: 10px;
    transition: background-color 0.3s ease;
  }

  .footer-block__details-content .button:hover {
    background-color: #ff8533;
  }

  .list-social {
    display: flex;
    gap: 10px;
    margin-top: 20px;
  }

  .list-social__link {
    font-size: 20px;
  }

  /* Payment icons styles */
  .footer__payment {
    margin-top: 30px;
  }

  .list-payment {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .list-payment__item {
    background-color: #ffffff;
    border-radius: 4px;
    padding: 5px;
  }

  /* Copyright section styles */
  .footer__copyright {
    text-align: center;
    margin-top: 30px;
    font-size: 14px;
    color: #ffffff; /* Ensure copyright text is white */
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="footer__content-top">
    <div class="footer__blocks-wrapper grid grid--1-col grid--2-col grid--4-col-tablet page-width">
